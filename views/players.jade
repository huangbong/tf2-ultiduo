h2 Registered Players

table.players
  tr
    th Player
    th SteamID
    th Class

  each player in players
    - if (player.class_id != 0)
      tr
        td !{player.name}
        td !{player.steamid}
        td
          - if (player.class_id == 1)
            | Soldier

          - else if (player.class_id == 2)
            | Medic
